.main-container
  .company-logo
    = image_tag("relyonlogo.png", :alt=>"relyon", :class => "company-logo-style")
  .form-signin
    = form_for(:session, url:sessions_path) do |f|
      .form-fieldbox
        = f.text_field :email, :class => "form-control",:placeholder => "Email ID", :autofocus => true
      .form-fieldbox
        = f.password_field :password, :class => "form-control",:placeholder => "Password"
      .form-button
        = f.submit "Submit",:class=>"btn btn-lg btn-primary btn-block"
    .signup-fieldbox
      %p
        New User? #{link_to "Signup Now!", root_path}