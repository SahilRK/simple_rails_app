<div class="main-container">
  <h1>All Projects</h1>


  <div class="navigation-list">
    <li><%= image_tag("arrow.png", :alt=>"arrow", :class => "arrow") %><%=  link_to "Add New Project", new_project_path %></li>
    <li><%= image_tag("arrow.png", :alt=>"arrow", :class => "arrow") %><%= link_to "Show All Employees", employees_path%></li>
    <li><%= image_tag("arrow.png", :alt=>"arrow", :class => "arrow") %><%= link_to "Show All Paymonths", paymonths_path%></li>
    <li><%= image_tag("arrow.png", :alt=>"arrow", :class => "arrow") %><%=  link_to "Show Monthly Activity Sheet ", monthly_activity_sheets_path %></li>
  </div>

  <div class="employees-list">
    <table>
      <tr>
        <th>Project Name</th>
        <th>Project Commence Date</th>
        <th>Project Completion Date</th>
        <th>Options</th>
      </tr>

      <% @project.each do |proj| %>
          <tr>
            <td><%= link_to proj.project_name, proj %></td>
            <td><%= link_to proj.project_commence_date, proj %></td>
            <td><%= link_to proj.project_completion_date, proj %></td>
            <td><%= link_to "show", proj%>
              <%= link_to "edit", edit_project_path(proj) %>
              <%= link_to "delete", proj, method: :delete,
                          data: { confirm: "You sure?" } %>

            </td>
          </tr>
      <% end %>

    </table>

  </div>

  <div class="cls"></div>
</div>







