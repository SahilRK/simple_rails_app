<div class="main-container">
  <h1>All users</h1>

  <div class="navigation-list">
    <li><%= image_tag("arrow.png", :alt=>"arrow", :class => "arrow") %><%=  link_to "Add New User", new_user_path %></li>
  </div>

   <div class="employees-list">
      <table>
        <tr>
          <th>User Image</th>
          <th>Name</th>
          <th>Email</th>
          <th>Options</th>

        </tr>

        <% @users.each do |user| %>
            <tr>
              <td><%= gravatar_for user, size: 62 %></td>
              <td><%= link_to user.name, user %></td>
              <td><%= link_to user.email, user %></td>
              <td><%= link_to "show", user%>
                <%= link_to "edit", edit_user_path(user) %>
                <%= link_to "delete", user, method: :delete,
                            data: { confirm: "You sure?" } %>

              </td>
            </tr>
        <% end %>

      </table>

    </div>

    <div class="cls"></div>
  </div>